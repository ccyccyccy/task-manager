<%# used to populate tasks table %>

<%# within each tbody contains 3 rows. task_overview shown %>
<%# task_remarks and task_form hidden by default %>
<tbody id="<%= task.id %>">
  <tr class="task_overview d-flex">
    <td class="col-1">
      <a href="javascript:void(0)" class="toggle_edit">Edit</a>
      <%= link_to 'Delete', task, 
          remote: true,
          method: :delete, 
          data: {confirm: 'Are you sure?'} %>
    </td>
    <td class="col-7">
      <a href='javascript:void(0)' class="toggle_expand">[+]</a>
      <span class="task_title"><%= task.title %></span>
    </td>
    <td class="col-2">
      <span class="task_tags">
        <% task.tags.each do |tag| %>
          <%= link_to tag.name, tag %>
        <% end %>
      </span>
    </td>
    <td class="date col-2"><%= local_time(task.created_at) %></td>  
  </tr>

  <tr class="remarks d-none">
    <td class="col-1"></td>
    <td class="col-9">
      <span class="task_remarks"><%= task.remarks %></span>
    </td>
    <td class="col=2"></td>
  </tr>

  <tr class="d-flex">
    <td class="col-12">
      <%# render partial: "form", locals: { full: true } OR render "form", full: true %>
      <%# they are the same %>
      <%= render "application/form", task: task %>
    </td>
  </tr>
</tbody>