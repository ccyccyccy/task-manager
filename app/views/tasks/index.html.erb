<h1>Task Manager</h1>

<table id="table">
  <thead>
    <tr>
      <th colspan="3"></th>
      <th align="left"><%= link_to 'Title', tasks_path(sort_order: click_title_order) %></th>
      <th><%= link_to 'Created At', tasks_path(sort_order: click_date_order) %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.order(@sort_order).each do |task| %>
      <tr id="<%= task.id %>">
        <td><%= link_to 'Edit', edit_task_path(task), remote: true %></td>
        <td><%= link_to 'Delete', task, 
                remote: true,
                method: :delete, 
                data: {confirm: 'Are you sure?'} %></td>
        <td><a href='javascript:void(0)' class="toggle_link">[+]</a></td>
        <td class="task_title">
          <%= task.title %>
          Tags:
          <% task.tags.order(:name).each do |tag| %>
            <%= link_to tag.name, tag %>
          <% end %>
        </td>
        <td class="date"><%= local_time(task.created_at) %></td>  
      </tr>
      <tr id="hidden_task_<%= task.id %>"></tr>
    <% end %>
  </tbody>
</table>


<br><%= link_to "Add Task", new_task_path, remote: true %>

<h2>Tags</h2>
<% @tags.each do |tag| %>
  <p><%= link_to "[X]", tag, method: :delete, data: { confirm: 'Are you sure?' } %> <%= link_to tag.name, tag %></p>
<% end %>

<br><%= link_to "New Tag", new_tag_path %>

