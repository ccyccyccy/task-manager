<h1>Task Manager <button class="toggle_new btn btn-primary">Add Task</button></h1>
<div id="main">
  <div class="new_task_container">
    <%= render 'form', task: Task.new %>
  </div>
  <table id="table" class="table-hover" width="100%">
    <thead>
      <tr class="d-flex">
        <th class="col-1"></th>
        <th class="col-7"><%= link_to 'Title', tasks_path(sort_order: click_title_order) %></th>
        <th class="col-2">Tags</th>
        <th class="col-2"><%= link_to 'Created At', tasks_path(sort_order: click_date_order) %></th>
      </tr>
    </thead>
    <% @tasks.order(@sort_order).each do |task| %>
      <%= render 'task_tbody', task: task %>
    <% end %>
  </table>
</div>

<div class="tags">
  <h2>Tags</h2>
  <% @tags.each do |tag| %>
    <p><%= link_to "[X]", tag, method: :delete, data: { confirm: 'Are you sure?' } %> <%= link_to tag.name, tag %></p>
  <% end %>

  <br><%= link_to "New Tag", new_tag_path %>
</div>